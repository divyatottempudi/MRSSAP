@model MRSSApp.ViewModel.AdminAppointmentListViewModel
@{
    ViewBag.Title = "AdminAppointmentList";
}

<h2>Appointment List</h2>
<hr/>
<p>List below are the appointments for today</p>
<table class="table">
    <tr>
        <th>Confirmation Number</th>
        <th>Patient Name</th>
        <th>Gender</th>
        <th>Patient PhoneNumber</th>
        <th>Doctor Name</th>
        <th></th>
    </tr>
    @foreach (var item in Model.AdminAppointments)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Confirmation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientName)
            </td>
            <td>
                @(item.Gender == 1 ? "Male" : "Female")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.AppointmentId })
            </td>
        </tr>
    }
</table>

